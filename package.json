{
  "name": "react-axe",
  "version": "3.5.1",
  "description": "Dynamic accessibility analysis for React using axe-core",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/after.js",
    "dist/after.d.ts",
    "dist/after.js.map",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.js.map"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "install:example": "cd example && npm install",
    "eslint": "eslint --ext .js,.ts *.ts",
    "pretest": "npm run install:example",
    "test": "eslint index.ts && tsc && npm run test:types && start-server-and-test start-server http://localhost:8080 test:run",
    "test:types": "cd test && tsc",
    "start-server": "cd example && npm run start",
    "test:run": "cypress run",
    "test:debug": "cypress open",
    "fmt": "prettier --write *.{js,ts,json,md} example/*.json example/src/*.{js,css} cypress/**/*.{js,json}",
    "release": "standard-version -a"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "lint",
    "test"
  ],
  "contributors": [
    {
      "name": "Niklas Holmberg (@badtant)"
    },
    {
      "name": "Dylan Barrell (dylan@barrell.com)"
    },
    {
      "name": "Jennifer Stern (@junyper)"
    },
    {
      "name": "Marcy Sutton (@marcysutton)"
    },
    {
      "name": "Wilco Fiers (@wilcofiers)"
    }
  ],
  "author": "Dylan Barrell (dylan@barrell.com)",
  "license": "MPL-2.0",
  "dependencies": {
    "axe-core": "^3.5.0",
    "requestidlecallback": "^0.3.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.20",
    "@types/requestidlecallback": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "cypress": "^3.8.3",
    "cypress-shadow-dom": "^1.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "http-server": "^0.11.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "standard-version": "^7.1.0",
    "start-server-and-test": "^1.10.8",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dequelabs/react-axe"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
